<%- include("partials/header") -%> 

<h1>Compose</h1>
<form action="/compose" method="POST">
    <div class="form-group">
        <label for="titleCompose">Title</label>
        <input id="titleCompose" type="text" name ="postTitle" class="form-control"/>
    </div>

    <div class="form-group">
        <label for="titleText">Post</label>
        <textarea class="form-control" name="postBody" id="titleText" rows="7"></textarea>
    </div>

    <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>

